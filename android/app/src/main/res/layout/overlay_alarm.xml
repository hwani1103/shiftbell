<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="20dp">

    <!-- 메인 알람 카드 (indigo 그라데이션) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/overlay_card_gradient"
        android:padding="24dp"
        android:gravity="center"
        android:elevation="8dp">

        <!-- 알람 아이콘 -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_lock_idle_alarm"
            android:tint="#FFFFFF"
            android:alpha="0.9"
            android:layout_marginBottom="8dp"/>

        <!-- 현재 시간 -->
        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:30"
            android:textSize="56sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp"/>

        <!-- 근무 타입 뱃지 -->
        <TextView
            android:id="@+id/shiftTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주간"
            android:textSize="16sp"
            android:textColor="#3949AB"
            android:textStyle="bold"
            android:background="@drawable/overlay_shift_badge"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"/>

    </LinearLayout>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- 끄기 버튼 (빨간 테두리) -->
        <Button
            android:id="@+id/dismissButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="알람 끄기"
            android:textSize="15sp"
            android:textColor="#EF5350"
            android:textStyle="bold"
            android:background="@drawable/overlay_button_dismiss"
            android:layout_marginEnd="8dp"/>

        <!-- 5분 후 버튼 (indigo) -->
        <Button
            android:id="@+id/snoozeButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="5분 후"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/overlay_button_snooze"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
